<BorderPane fx:id="rootPane" prefHeight="720.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1">
   <center>
      <HTMLEditor htmlText="&lt;html&gt;&lt;head&gt;&lt;/head&gt;&lt;body contenteditable=&quot;true&quot;&gt;&lt;/body&gt;&lt;/html&gt;" prefHeight="668.0" BorderPane.alignment="CENTER" />
   </center>
   <top>
      <GridPane BorderPane.alignment="CENTER">
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" maxWidth="-Infinity" minWidth="10.0" prefWidth="70.0" />
          <ColumnConstraints hgrow="SOMETIMES" maxWidth="400.0" minWidth="10.0" prefWidth="100.0" />
            <ColumnConstraints hgrow="SOMETIMES" maxWidth="400.0" minWidth="10.0" prefWidth="100.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <Label text="To">
               <graphic>
                  <StackedFontIcon>
                     <children>
                        <FontIcon iconLiteral="fa-envelope" />
                     </children>
                     <padding>
                        <Insets right="2.0" />
                     </padding>
                  </StackedFontIcon>
               </graphic>
            </Label>
            <Label text="Subject" GridPane.rowIndex="1">
               <graphic>
                  <StackedFontIcon>
                     <children>
                        <FontIcon iconLiteral="fa-pencil" />
                     </children>
                     <padding>
                        <Insets right="2.0" />
                     </padding>
                  </StackedFontIcon>
               </graphic>
            </Label>
            <TextField GridPane.columnIndex="1" />
            <TextField GridPane.columnIndex="1" />
            <TextField GridPane.columnIndex="1" GridPane.rowIndex="1" />
            <Label opacity="0.7" text="add multiple addresses with a comma ( , )" GridPane.columnIndex="2">
               <GridPane.margin>
                  <Insets left="8.0" />
               </GridPane.margin>
               <font>
                  <Font name="System Italic" size="12.0" />
               </font>
            </Label>
         </children>
         <BorderPane.margin>
            <Insets left="16.0" />
         </BorderPane.margin>
         <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </padding>
      </GridPane>
   </top>
   <bottom>
      <BorderPane prefHeight="32.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <bottom>
            <BorderPane prefHeight="32.0" prefWidth="200.0" BorderPane.alignment="CENTER">
               <right>
                  <HBox alignment="CENTER_RIGHT" BorderPane.alignment="CENTER">
                     <BorderPane.margin>
                        <Insets left="10.0" right="10.0" />
                     </BorderPane.margin>
                     <children>
                        <Button layoutX="10.0" layoutY="10.0" mnemonicParsing="false" text="Send">
                           <graphic>
                              <StackedFontIcon>
                                 <children>
                                    <FontIcon iconLiteral="fa-paper-plane" />
                                 </children>
                              </StackedFontIcon>
                           </graphic>
                           <HBox.margin>
                              <Insets left="5.0" />
                           </HBox.margin>
                        </Button>
                     </children>
                  </HBox>
               </right>
               <left>
                  <Button mnemonicParsing="false" onAction="#actionBackToInbox" text="Cancel" BorderPane.alignment="CENTER">
                     <graphic>
                        <StackedFontIcon>
                           <children>
                              <FontIcon iconLiteral="fa-inbox" />
                           </children>
                        </StackedFontIcon>
                     </graphic>
                     <BorderPane.margin>
                        <Insets left="10.0" />
                     </BorderPane.margin>
                  </Button>
               </left>
            </BorderPane>
         </bottom>
      </BorderPane>
   </bottom>
</BorderPane>
