<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import org.kordamp.ikonli.javafx.FontIcon?>
<?import org.kordamp.ikonli.javafx.StackedFontIcon?>

<GridPane fx:id="rootPane" onMouseClicked="#actionSetFolder" prefHeight="24.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1">
   <columnConstraints>
      <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="24.0" />
      <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
   </rowConstraints>
   <children>
      <StackedFontIcon iconSize="18">
         <children>
            <FontIcon fx:id="icon" iconLiteral="fa-bookmark" iconSize="18" />
         </children>
      </StackedFontIcon>
      <Label fx:id="folderLabel" text="Label" GridPane.columnIndex="1">
         <GridPane.margin>
            <Insets left="4.0" />
         </GridPane.margin>
      </Label>
   </children>
</GridPane>
